# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Atlas Connection
# Replace with your MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/hospital_management?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRES_IN=7d

# Frontend URLs (comma-separated for multiple origins)
FRONTEND_URL=http://localhost:5173,http://localhost:3000

# Email Configuration (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=Hospital Management <noreply@hospital.com>

# Production Frontend URL (set this when deployed)
# FRONTEND_URL=https://your-frontend-domain.lovable.app
